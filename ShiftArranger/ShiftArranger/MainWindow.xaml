<Window x:Class="ShiftArranger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShiftArranger"
        mc:Ignorable="d"
        Title="MainWindow" Height="515.789" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock>Doctors</TextBlock>
            <ListView x:Name="DoctorListView" ItemsSource="{Binding DoctorList}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"/>
                        <GridViewColumn Header="Type"/>
                        <GridViewColumn Header="Main Ward"/>
                        <GridViewColumn Header="Available Ward"/>
                        <GridViewColumn Header="Want"/>
                        <GridViewColumn Header="Avoid"/>
                        <GridViewColumn Header="Relative Want"/>
                        <GridViewColumn Header="Relative Avoid"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Click="Button_Click" >Do</Button>
        </StackPanel>
    </Grid>
</Window>
